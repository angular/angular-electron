{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitHelpers": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "dist",
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}